<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <Title>Hashing Library</Title>
    <Company></Company>
    <Description>Provides common password hashing services with optional encryption of hashes. Based around the Argon2 algorithm.</Description>
    <Product>Common Libraries</Product>
    <Copyright></Copyright>
    <PackageLicenseFile>LICENCE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Hashing.xml</DocumentationFile>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>security, hashing, cryptography</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Konscious.Security.Cryptography.Argon2" Version="1.2.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENCE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
